<div class = "sign-up">

  <h1 class = "mb-2">List your moped!</h1>

  <%= simple_form_for @moped do |f| %>
    <%= f.input :name %>
    <%= f.input :color %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :address,
      input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
      wrapper_html: {data: {controller: "address-autocomplete",
      address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
    <%= f.input :n_of_passengers %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.button :submit, "Create Moped", class: "mt-1 btn-success-blue" %>
  <% end %>

</div>
