<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  
<ul><% @mopeds.each do |moped| %>
  <div class="card-moped flex-container">
    <div class="card-moped-infos flex-item">
      <h4><%= link_to moped.name, moped_path(moped) %></h4>
      <li>Color: <%= moped.color%></li>
      <li>Description: <%= moped.description%></li>
      <li>No of passengers <%= moped.n_of_passengers%></li>
      <li>Price: Â£<%= moped.price %></li>
      <li>Owned by <%= moped.user.first_name %></li>
    </div>
  </div>
<% end %></ul>
